{
  "name": "phrasemachine-v2",
  "version": "1.0.0",
  "description": "PhraseMachine v2 - Description-Only Edition: Automated service for generating & vetting 2-4-word phrases optimized for verbal description in party games",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:admin\"",
    "dev:api": "nodemon services/api/server.js",
    "dev:admin": "cd admin && npm start",
    "build": "npm run build:api && npm run build:admin",
    "build:api": "node build-api.js",
    "build:admin": "cd admin && npm run build",
    "start": "node services/api/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "distinctiveness": "node services/distinctiveness/server.js",
    "wikidata:ingest": "node services/distinctiveness/cli.js ingest",
    "wikidata:test": "node services/distinctiveness/cli.js test",
    "wikidata:stats": "node services/distinctiveness/cli.js stats",
    "wikidata:clear": "node services/distinctiveness/cli.js clear",
    "test:distinctiveness": "node services/distinctiveness/test-distinctiveness.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "redis": "^4.6.12",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1",
    "axios": "^1.6.2",
    "openai": "^4.20.1",
    "compromise": "^14.10.0",
    "natural": "^6.12.0",
    "spacy-nlp": "^1.0.1",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "@types/node": "^20.10.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "phrase-generation",
    "nlp",
    "scoring",
    "party-games",
    "microservices",
    "ai"
  ],
  "author": "Words on Phone Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jamespheffernan/words-on-phone.git",
    "directory": "phrasemachine-v2"
  }
} 